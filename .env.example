# TripGood Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
VITE_APP_NAME=TripGood
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Comprehensive Travel Companion App"

# Supabase Configuration (for authentication)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration (for future real API integrations)
VITE_API_BASE_URL=https://api.tripgood.com
VITE_API_VERSION=v1

# External Services (for future integrations)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_WEATHER_API_KEY=your_weather_api_key_here
VITE_CURRENCY_API_KEY=your_currency_api_key_here

# Development/Production Environment
VITE_NODE_ENV=development
VITE_ENABLE_MOCK_APIS=true

# Analytics (for future use)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_HOTJAR_ID=your_hotjar_id_here

# Social Media (for future sharing features)
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here
VITE_TWITTER_API_KEY=your_twitter_api_key_here

# Payment Gateway (for future booking features)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here
